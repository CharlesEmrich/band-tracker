@{
  Layout="Shared/_Layout.cshtml";
}

<form action="/bands/new" method="post">
  <label for="name">Band Name:</label>
  <input type="text" name="name">
  <button type="submit" name="button">Add New Band</button>
</form>

@if(Model.Count > 0)
{
  <ul>
  @foreach(var band in Model)
  {
    <li><a href="/bands/@band.Id">@band.Name</a></li>
  }
</ul>
}
